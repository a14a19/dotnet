@model practice.Models.Product
<h1>Add product </h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="ProductName" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Cost </label>
        <input asp-for="Cost" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">IsActive</label>
        <input asp-for="IsActive" type="text" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="Save">

</form>
